<fieldset>
  <%= form_for @event do |f| %>
    <%= f.text_field :title, placeholder: 'Title' %>
    <%= f.text_field :description, placeholder: 'Description' %>
    <%= text_field_tag :address, nil, placeholder: 'Address/Intersection' %>
    <%= f.select :pace, options_for_select([5,6,7,8,9,10,11,12]) %>
    <%= f.submit 'Create Run', class: 'button' %>
  <% end %>

  <div id="map"></div>
</fieldset>
