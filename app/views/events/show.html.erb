<fieldset>
  <h1><%= @event.title %></h1>
  <% if @event.description != "" %>
    <p id='description'><%= @event.description %></p>
  <% end %>
  <p>Organizer: <b><%= @event.user.username %></b> <span><img class='circle' src="http://www.gravatar.com/avatar/<%= @event.user.gravatar_hash %>?s=30&d=mm"></span></p>
 
  <% if current_user.notifications.find_by_event_id(@event.id) %>
    <form id="commit-toggle">
      <input id="notification-id" name="id" type="hidden" value="<%= current_user.notifications.find_by_event_id(@event.id).id %>">
      <input id="current-user-id" name="current-user-id" type="hidden" value="<%= current_user.id %>">
      <input id="current-user-avatar" name="current-user-avatar" type="hidden" value="<%= current_user.gravatar_hash %>">
      <div class="switch">
        <% if current_user.notifications.find_by_event_id(@event.id).committed == false %>
          <input id="z" name="committed-switch" type="radio" checked>
          <label for="z" onclick="">Commit to Run?</label>

          <input id="z1" name="committed-switch" type="radio" >
          <label for="z1" onclick="">Committed</label>
        <% else %>
          <input id="z" name="committed-switch" type="radio" >
          <label for="z" onclick="">Commit to Run?</label>

          <input id="z1" name="committed-switch" type="radio" checked>
          <label for="z1" onclick="">Committed</label>
        <% end %>
        <span></span>
      </div>
    </form>
  <% end %>

  <table class='show-event'>
    <tr>
      <td>When</td>
      <td><b><%= @event.start_time.localtime.strftime("%I:%M%p on %m/%d/%Y") %></b></td>
    </tr>
    <tr>
      <td>Distance</td>
      <td><b><%= @event.route.distance %> miles</b></td>
    </tr>
    <tr>
      <td>Pace</td>
      <td><b><%= @event.pace %>:00/mile</b></td>
    </tr>
    <tr>
      <td>Total Time</td>
      <td><b><%= (@event.route.distance * @event.pace).round(0) %> minutes</b></td>
    </tr>
  </table>
  <div id="map-show"></div>

  <div id="committed-runners">
    <h5>Committed Runners</h5>
    <% @event.users.each do |user| %>
      <% if user.notifications.find_by_event_id(@event.id).committed == 1 %>
        <img id="user-<%= user.id %>"class='circle' src="http://www.gravatar.com/avatar/<%= user.gravatar_hash %>?s=30&d=mm">
      <% end %>
    <% end %>
  </div>

   <div id="notified-runners">
    <h5>Notified Runners</h5>
    <% @event.users.each do |user| %>
      <% if user.notifications.find_by_event_id(@event.id).committed == 0 %>
        <img id="user-<%= user.id %>"class='circle' src="http://www.gravatar.com/avatar/<%= user.gravatar_hash %>?s=30&d=mm">
      <% end %>
    <% end %>
  </div>
</fieldset>

<script type="text/javascript">
  var waypoints = <%= @waypoints %>;
</script>
