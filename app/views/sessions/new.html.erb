<fieldset>
  <h1>Login</h1>
	<%= form_for(:session, url: sessions_path) do |f| %>
    <%= label_tag :username %>
	  <%= f.text_field :username, placeholder: 'Username' %>
    <%= label_tag :password %>
	  <%= f.password_field :password, placeholder: 'Password' %>
	  <%= f.submit 'Login', class: 'button' %>
	<% end %>
</fieldset>