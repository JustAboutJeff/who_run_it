<fieldset>
  <legend><h3 class="subheader"><%= @location_setting.name %></h3></legend>
  <%= link_to "Edit", edit_location_setting_path(@location_setting), class: 'button' %>
  <%= link_to 'Delete', @location_location, method: :delete, class: 'button', confirm: "Are you sure?" %>
  <table>
    <thead>
      <tr>
        <th>Open Times</th>
        <th>Notification Method</th>
        <th>Pace Min.</th>
        <th>Pace Max.</th>
        <th>Distance Min.</th>
        <th>Distance Max.</th>
        <th>Address</th>
        <th>Search Radius</th>
      </tr>
    <thead>
    <tbody>
      <tr>
        <td><%= @location_setting.notification_frequency %></td>
        <td><%= @location_setting.notification_method %></td>
        <td>Min: <%= @location_setting.pace_min %></td>
        <td>Max: <%= @location_setting.pace_max %></td>
        <td>Min: <%= @location_setting.distance_min %></td>
        <td>Max: <%= @location_setting.distance_max %></td>
        <td><%= @location_setting.address %></td>
        <td><%= @location_setting.search_radius %> mi.</td>
      </tr>
    </tbody>
  </table>
  <div id="map-location" class="dark"></div>
</fieldset>

<script type="text/javascript">
  var coords = <%= @coords %>;
  var search_radius = <%= @location_setting.search_radius %>
</script>
